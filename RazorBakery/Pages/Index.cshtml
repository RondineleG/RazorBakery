@page
@model IndexModel
@{
    ViewData["Title"] = "Pagina Inicial";
}
<h1>Welcome to Fourth Coffee!</h1>
<div id="featuredProduct" class="row"> 
    <div class="col-sm-8">
        <img alt="Featured Product" src="~/img/Produtos/@Model.ProdutoDestaque.NomeImagen" class="img-fluid rounded"/>
    </div>
    <div id="featuredProductInfo" class="col-sm-4">
        <div id="productInfo">
            <h2>@Model.ProdutoDestaque.Nome</h2>
            <p class="price">$@string.Format("{0:f}", Model.ProdutoDestaque.Preco)</p>
            <p class="description">@Model.ProdutoDestaque.Descricao</p>
        </div>
        <div id="callToAction">
            <a class="btn btn-danger order-button" asp-page="/order" asp-route-id="@Model.ProdutoDestaque.Id" title="Order @Model.ProdutoDestaque.Nome">Order Now</a>
        </div>
    </div>
</div>
<div id="productsWrapper" class="row">
@foreach (var produto in Model.Produtos)
{
    <div class="col-sm-3">
        <a asp-page="/order" asp-route-id="@produto.Id" title="Order @produto.Nome">
            <div class="productInfo">
                <h3>@produto.Nome</h3>
                <img class="product-image img-fluid img-thumbnail" src="~/img/Produtos/miniaturas/@produto.NomeImagen" alt="Image of @produto.Nome" />
                <p class="description">@produto.Descricao</p>
            </div>
        </a>
        <div class="action">
            <p class="price float-left">$@string.Format("{0:f}", produto.Preco)</p>
            <a class="btn btn-sm btn-danger order-button float-right" asp-page="/order" asp-route-id="@produto.Id" title="Order @produto.Nome">Order Now</a>
        </div>
    </div>
}
</div>